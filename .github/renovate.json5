{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    ':automergeAll',
    'schedule:weekly',
  ],
  packageRules: [
    {
      matchCurrentValue: '/^2\\./',
      allowedVersions: '(,3.0)',
      matchPackageNames: [
        'org.codehaus.groovy:{/,}**',
      ],
    },
    {
      matchCurrentValue: '/^4\\./',
      allowedVersions: '(,5.0)',
      matchPackageNames: [
        'org.apache.groovy:{/,}**',
      ],
    },
    {
      matchCurrentValue: '/^1\\./',
      allowedVersions: '/^1\\..*-groovy-2\\.*/',
      matchPackageNames: [
        'org.spockframework:{/,}**',
      ],
    },
    {
      allowedVersions: '!/-SNAPSHOT$/',
      matchPackageNames: [
        'org.opentest4j.reporting:{/,}**',
      ],
    },
    {
      allowedVersions: '!/4\\.33\\.0/',
      description: [
        'Due to https://github.com/diffplug/spotless/issues/2255',
      ],
      matchPackageNames: [
        'org.eclipse.platform:{/,}**'
      ]
    },
  ],
}
